{
  "name": "farcebook",
  "version": "1.0.0",
  "description": "A basic template for a React & Typescript-based idle/incremental game.",
  "license": "cc-by-sa-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cneuro/farcebook.git"
  },
  "keywords": [
    "clicker",
    "game",
    "incremental",
    "idle",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/cneuro/farcebook/issues"
  },
  "dependencies": {
    "bootstrap": "^5.2.2",
    "jotai": "^1.8.6",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0",
    "react-tsparticles": "^2.3.3",
    "tsparticles": "^2.3.4",
    "tsparticles-engine": "^2.3.3"
  },
  "devDependencies": {
    "@cneuro/eslint-config-alpha": "^1.1.1",
    "@types/node": "^18.11.5",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vite-plugin-checker": "^0.5.1",
    "vite-plugin-svgr": "^2.2.2",
    "vite-tsconfig-paths": "^3.5.2"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "npm run format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run format"
    ]
  },
  "scripts": {
    "build": "vite build",
    "format": "prettier --write .",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "prepare": "husky install",
    "start": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
